= form_for @feature do |f|
  - if @feature.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feature.errors.count, "error")} prohibited this feature from being saved:"
      %ul
        - @feature.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :difficulty
    = f.text_field :difficulty
  .field
    = f.label :probability
    = f.text_field :probability
  .field
    = f.label :description
    = f.text_area :description, :cols => "30", :rows => "10"
  .actions
    = f.submit 'Save'
